public class Checkerboard{
    public static void main(String[] args){
	int dimension = Integer.parseInt(args[0]) * 2;
	for(int y = 0; y < dimension; y++){
	    String row = "";
	    for(int x = 0; x < dimension; x++){
		if(x % 2 == y % 2){
		    row = row + "*"
		};
		else{
		    row = row + " "
		};
	    }
	    System.out.println(row);
	}
    }
}
